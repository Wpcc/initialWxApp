/* pages/payment/index.wxss */
/* 背景色：#32cd32 */
page{
  width: 100%;
  height: 100%;
}
.container-box{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: #eee;
}
.bg-top{
  width: 100%;
  height: 15%;
  background: #32cd32;
}
.content-box{
  box-sizing: border-box;
  width: 100%;
  height: 90%;
  position: absolute;
  left: 0;
  top: 0;
  padding: 80rpx 40rpx 0;
}
.box1-panel{
  width: 100%;
  height: 200rpx;
  background: #fff;
  border-radius: 4px;
  margin-bottom: 3%;
  padding-top: 50rpx;
  box-sizing: border-box;
}
.content-explain{
  font-size: 14px;
  text-align: center;
  padding-bottom: 20rpx;
}
.content-import{
  font-size: 18px;
  text-align: center;
  color: #32cd32;
  font-weight: 600;
}
.title{
  font-size: 12px;
  padding: 10rpx 0;
}
.box2{
  margin-bottom: 3%;
}
.box2 .box2-panel{
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  padding: 0 20rpx;
  background:#fff;
  border-radius: 4px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btn-box{
  width: 160rpx;
  height: 140rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 30rpx;
  border: 1px solid #999;
  border-radius: 4px;
}
.time{
  font-size: 16px;
}
.money{
  font-size: 12px;
  color: #666;
}
.box3 .box3-panel{
  width: 100%;
  height: 300rpx;
  background:#fff;
  border-radius: 4px;
}
.box-btn{
  width: 100%;
  padding: 0 40rpx;
  position: absolute;
  left: 0;
  bottom: 40rpx;
  box-sizing: border-box;
}
.btn{
  width: 100%;
  margin-top: 5%;
  background: #32cd32!important;
  border: none!important;
}