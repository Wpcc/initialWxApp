/* pages/socket/index.wxss */
/* 背景色：#32cd32 */
page{
  width: 100%;
  height: 100%;
}
.container-box{
  width: 100%;
  height: 100%;
  background: #eee;
  box-sizing: border-box;
}
.bg-top{
  width: 100%;
  height: 15%;
  background: #32cd32;
}
.content-box{
  box-sizing: border-box;
  width: 100%;
  height: 90%;
  position: absolute;
  left: 0;
  top: 0;
  padding: 80rpx 40rpx 0;
}
.box1-panel{
  width: 100%;
  height: 240rpx;
  background: #fff;
  border-radius: 4px;
  margin-bottom: 3%;
  padding: 30rpx;
  box-sizing: border-box;
  color: #333;
}
.line01{
  font-weight: 600;
  margin-bottom: 20rpx;
}
.circle{
  width: 20rpx;
  height: 20rpx;
  background: #999999;
  border-radius: 50%;
  margin-right: 10rpx;
}
.line02{
  display: flex;
  justify-content: flex-start;
  font-size: 12px;
  margin-bottom: 20rpx;
}
.line02-two .circle{
  background: #32cd32;
}
.line02-three .circle{
  background: #F30B21;
}
.line02-one, .line02-two, .line02-three{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 20rpx;
}
.line03{
  font-size: 14px;
  color: #666;
}
.box2{
  margin-bottom: 3%;
}
.title{
  font-size: 12px;
  padding: 10rpx 0;
}
.box2 .box2-panel{
  box-sizing: border-box;
  width: 100%;
  height: 400rpx;
  padding: 0 20rpx;
  background:#fff;
  border-radius: 4px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-top: 20rpx;
}
.li{
  width: 20%;
}
.number{
  text-align: center;
  font-size: 16px;
  font-weight: 600;
}
.look{
  width: 72rpx;
  height: 90rpx;
  display: block;
  margin: 0 auto;
}
.state{
  text-align: center;
  font-size: 12px;
  color: #999999;
}
.state-1{
  color:#32cd32;
}
.state-2{
  color:#F30B21;
}
.clearBtn{
  padding: 0!important;
  display: inline;
  line-height: 1.5;
}