/* pages/index-new/index.wxss */
swiper{
  width: 100%;
  height: 350rpx;
}
.slide-image{
  width: 100%;
  height: 350rpx;
}

.navigate{
  width: 100%;
  padding-top: 20px;
  overflow: hidden;
}
.navigate-item{
  width: 33.3333%;
  text-align: center;
  font-size: 11px;
  color: #333;
  float: left;
  padding-bottom: 20px;
}
.navigate-image{
  width:90rpx;
  height:90rpx;
  display:block;
  margin: 0 auto;
  margin-bottom: 3px;
}

.scan{
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  margin-left: -95rpx
}
.scan-image{
  width: 190rpx;
  height: 190rpx;
}

.search{
  width: 600rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.5);
  color: #fff;
  position: fixed;
  top: 20rpx;
  left: 50%;
  margin-left: -300rpx;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 25rpx;
}
.search-image{
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  margin-right: 10px;
}

/* 清楚btn样式 */
.clear-btn{
  display: block;
  background: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}
.clear-btn{
  border:none
}