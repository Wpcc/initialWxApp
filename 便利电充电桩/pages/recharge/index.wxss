/* pages/recharge/index.wxss */
.recharge{
  width: 100%;
  height: 100%;
  padding:40rpx 30rpx;
  box-sizing: border-box;
  font-size: 14px;
  position: relative;
}
.banner{
  width: 100%;
  height: 24%;
  padding: 0 2%;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  position: relative;
}
.balance-position{
  position: absolute;
  right:5%;
  top: 30%;
}
.balance-text{
  display: block;
  font-size: 12px;
}
.balance-title{
  color: #666;
  font-size: 11px;
}
.balance-content{
  margin-top: 10rpx;
}
image{
  width: 100%;
  height: 100%;
}
.title{
  margin-bottom: 20rpx;
  padding-left: 2%;
}
.container-box{
  width: 100%;
  overflow: hidden;
}
.btn-box{
  color: #23C675;
  background:#fff;
  width:29%;
  border-radius: 10rpx;
  border: 1px solid #23c675;
  float: left;
  margin:0 2%;
  padding: 10rpx;
  box-sizing: border-box;
}
.btn-text{
  text-align: center;
}
.show-money{
  font-size: 18px;
}
.real-money{
  font-size: 12px;
}
.confirm-box{
  position: absolute;
  bottom: 30rpx;
  left: 0;
  width: 100%;
  padding:0 40rpx;
  box-sizing: border-box;
}
.btn-confirm{
  width: 100%;
}
