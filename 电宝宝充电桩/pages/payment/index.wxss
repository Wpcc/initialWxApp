/* pages/payment/index.wxss */

.form-title{
  position: absolute;
  left: 0;
  top: 30px;
  width: 100%;
  text-align: center;
  margin-bottom: 40px;
}
.form-container{
  width: 100%;
  height: calc(100% - 50px);
  display: flex;
  justify-content: center;
  align-items: center;
}
.form-content{
  width: 220px;
  height: 315px;
}
.form-btn{
  width: 90px;
  height: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  color: #23C675;
  float: left;
  margin:10px;
}
.form-btn::after{
    border:1px solid #23C675;
}

.btn-box{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px;
    background: #23C675;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
}