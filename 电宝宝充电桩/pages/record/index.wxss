/* pages/record/index.wxss */
/* 订单列表 */
/* 订单 title */
.list-container{
  width: 100%;
  box-sizing: border-box;
  padding: 0 10px;
  margin: 10px 0 0;
}
.underway-ul{
  width: 100%;
  box-sizing: border-box;
}
.order-li{
  margin-top: 10px;
  width: 100%;
  height: 180rpx;
  border: 1px solid #ddd;
  box-sizing: border-box;
}
.title{
  font-size: 24rpx;
  height: 32px;
  border-bottom: 1px solid #ddd;
  color: #666;
  box-sizing: border-box;
}
.title-left{
  height: 100%;
  margin-left: 10px;
  float: left;
  display: flex;
  align-items: center;
}
.title-right{
  height: 100%;
  float: right;
  display: flex;
  align-items: center;
  margin-right: 10px;
  font-size: 28rpx;
  color: #FD7727;
}
.order-number{
  margin-right: 20px;
}
.balance{
  width: 100%;
  overflow: hidden;
}
/* 订单content */
.content{
  box-sizing: border-box;
  width: 100%;
  height: 58px;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.recharge-left{
  float: left;
  padding-left: 20px;
}
.recharge-right{
  float: right;
  padding-right: 10px;
}
.recharge-time{
  color: #FD7727;
}
.recharge-money{
  color: #FD7727;
}