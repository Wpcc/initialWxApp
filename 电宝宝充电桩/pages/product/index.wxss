/* pages/product/index.wxss */
map{
  width: 100%;
  height: calc(100% - 50px);
}
.payment-container{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.payment-button{
  width:235px;
  height:40px;
  line-height: 40px;
  background: #23C675;
  color: #ffffff;
}
.payment-button::after{
  border:none;
}

.popup-container{
  width: 100%;
  height: 75px;
  position: absolute;
  top: 10px;
  left: 0;
  padding:0 10px;
  z-index: 2;
  box-sizing: border-box;
}
.popup-box{
  width: 100%;
  height: 140rpx;
  background: #ffffff;
  border-radius: 4px;
}

.popup-title{
  display: flex;
  justify-content: flex-start;
  margin: 20rpx 0;
  margin-left: 20rpx;
}
.popup-title-image{
  width: 44rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.popup-title-text{
  font-size: 32rpx;
  width: 400rpx;
  text-overflow: ellipsis;
}

.popup-view{
  font-size: 26rpx;
  margin: 0 20rpx;
  color: #666666;
  overflow: hidden;
}
.view-left{
  float: left;
}
.circle{
  width: 11px;
  height: 11px;
  margin:2px 5px 0 16px;
  float: left;
}
.residue-port{
  display: inline;
  color: #23C675;
}
.inline{
  display: inline;
}
.orange{
  color: #FF6700;
}
.icon-nav{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 60rpx;
  top: 20rpx;
}

/* 悬浮按钮 */
.btn{
  width: 80rpx;
  height: 80rpx;
  background: none;
}
.btn-position{
  position: absolute;
  left: 40rpx;
  bottom: 160rpx;
}
.btn-service{
  position: absolute;
  right: 40rpx;
  bottom: 260rpx;
}
.btn-share{
  position: absolute;
  right: 40rpx;
  bottom: 160rpx;
}

