/**index.wxss**/
.page{
  width: 100%;
  height: 100%;
}
/* 遮罩层样式 */
.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.6);
  z-index:3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask-box{
  width: 280px;
  height: 146px;
  background: #ffffff;
  border-radius:4px;
}
.mask-view{
  width: 100%;
  height: 95px;
  padding-top: 30px;
  border-bottom: 1px solid #D2D3D5;
  box-sizing: border-box;
}
.mask-view-title{
  font-size: 18px;
  text-align: center;
  margin-bottom: 18px;
}
.mask-view-content{
  font-size: 15px;
  text-align: center;
  margin-bottom:20px;
}
.mask-btn{
  overflow: hidden;
}
.mask-btn-cancel{
  font-size: 18px;
  width: 140px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items:center;
  border-right:1px solid #d2d3d5;
  float: left;
}
.mask-btn-confirm{
  font-size: 18px;
  width: 139px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items:center;
  float: left;
  color: #00C200;
}